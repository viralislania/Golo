<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity" 
    android:padding="10dp">

    <include
        android:id="@+id/searchExplore"
        layout="@layout/search_explorer" 
        android:layout_marginTop="10dip"/>

    <include layout="@layout/categories"
        android:layout_marginTop="10dip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recentlyVisited" 
        android:layout_marginTop="15dp"/>

    <GridView
        android:id="@+id/recentlyTiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dip"
        android:numColumns="3"
        android:verticalSpacing="2dip" 
        android:layout_marginTop="5dp">
    </GridView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frequentlyVisited"
        android:layout_marginTop="15dp" />

    <GridView
        android:id="@+id/frequentlyTiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dip"
        android:numColumns="3"
        android:verticalSpacing="2dip"
        android:layout_marginTop="5dp" >
    </GridView>

</LinearLayout>