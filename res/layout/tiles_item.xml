<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:holo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#0000ff"
    android:padding="2dp"
    android:minHeight="80dp">

    <TextView
        android:id="@+id/loyaltyPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="12"
        android:textSize="24sp"
         />

    <TextView
        android:id="@+id/pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/loyaltyPoints"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/loyaltyPoints"
        android:paddingBottom="3dp"
        android:text="pt" 
        android:textColor="@color/ptcolor">
    </TextView>

    <TextView
        android:id="@+id/vgNvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="V"
        android:textColor="@color/vcolor" />

    <TextView
        android:id="@+id/merchantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/loyaltyPoints"
        android:text="Sampple test" />

</RelativeLayout>